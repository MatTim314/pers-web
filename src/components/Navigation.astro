---
// src/components/Navigation.astro
const links = [
  { href: "/", text: "Home" },
  { href: "/projects/", text: "Projects" },
  // { href: "/about/", text: "About" }, // Add other pages
  // { href: "/experiments/", text: "Experiments" }, // For hidden features?
];
---

<header>
  <nav>
    <a href="/" class="logo">Timar</a>
    <ul>
      {
        links.map((link) => (
          <li>
            <a href={link.href}>{link.text}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: rgba(11, 16, 26, 0.8); /* Semi-transparent background */
    backdrop-filter: blur(5px);
    padding: 1rem 5%; /* Use percentage for padding */
    position: sticky; /* Make nav sticky */
    top: 0;
    z-index: 10;
    width: 100%;
    box-sizing: border-box; /* Include padding in width */
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px; /* Max width for nav content */
    margin: 0 auto; /* Center nav content */
  }
  .logo {
    font-weight: bold;
    font-size: 1.5rem;
    text-decoration: none;
    color: #ffffff;
  }
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1.5rem;
  }
  li a {
    text-decoration: none;
    color: #e0e0e0;
    font-size: 1rem;
    transition: color 0.2s ease;
  }
  li a:hover,
  li a:focus {
    color: #ffffff;
    text-decoration: underline; /* Add underline on hover/focus */
  }
</style>
