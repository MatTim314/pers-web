---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Introduction from "../components/Introduction.svelte";
import CvDownload from "../components/CvDownload.svelte"; // Can be Astro if not interactive
import Projects from "../components/Projects.svelte";
import projectData from "../data/projects"; // Import project data

const pageTitle = "Home";
---

<BaseLayout title={pageTitle} description="Welcome to my personal portfolio.">
  <!-- Remove the strange main styling from the original index.astro -->
  <Introduction client:visible />
  <CvDownload />
  <!-- Pass project data as a prop -->
  <Projects projects={projectData} client:visible />
</BaseLayout>
